<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editMac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MAC Address" />

    <EditText
        android:id="@+id/editSensorius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sensorius" />

    <EditText
        android:id="@+id/editStiprumas1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stiprumas" />

    <EditText
        android:id="@+id/editSensorius2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sensorius" />

    <EditText
        android:id="@+id/editStiprumas2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stiprumas" />

    <EditText
        android:id="@+id/editSensorius3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sensorius" />

    <EditText
        android:id="@+id/editStiprumas3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stiprumas" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>
